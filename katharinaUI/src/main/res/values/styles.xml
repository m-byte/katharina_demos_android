<resources>

    <!-- Base application theme. -->
    <style name="KatharinaUI" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="editTextStyle">@style/Proglove_EditText</item>
        <item name="android:textViewStyle">@style/Proglove_TextView</item>
        <item name="android:textSelectHandle">@drawable/divider</item>
        <item name="android:textSelectHandleLeft">@drawable/divider</item>
        <item name="android:textSelectHandleRight">@drawable/divider</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="Proglove_TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Proglove_EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/input_bg</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textSize">45dp</item>
        <item name="android:textColor">@color/inputText</item>
        <item name="android:textColorHint">@color/inputTextHint</item>
    </style>

    <style name="Proglove_LinearLayout">
        <item name="android:padding">10dp</item>
        <item name="android:divider">@drawable/divider</item>
        <item name="android:dividerHeight">10dp</item>
    </style>

    <style name="Proglove_ButtonPrinter">
        <item name="android:background">@drawable/button_bg_printer</item>
        <item name="android:textColor">@color/buttonText</item>
        <item name="android:textSize">30sp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">100dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="Proglove_Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">#000000</item>
        <item name="android:panelBackground">#ffd900</item>
        <item name="android:windowTitleBackgroundStyle">@style/Proglove_WindowAlert</item>
    </style>
    <style name="Proglove_WindowAlert">
        <item name="android:headerBackground">#f97200</item>
        <item name="android:background">#f97200</item>
        <item name="android:colorBackground">#f97200</item>
        <item name="android:panelBackground">#f97200</item>
    </style>
</resources>
